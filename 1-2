public class IncrementDecrementExample {
    public static void main(String[] args) {
        int n = 5;

        System.out.println("n   = " + n);    // 5
        System.out.println("n++ = " + (n++)); // 5ï¼ˆä½¿ã£ãŸå¾Œã§ +1ï¼‰
        System.out.println("n   = " + n);    // 6
        System.out.println("++n = " + (++n)); // 7ï¼ˆä½¿ã†å‰ã« +1ï¼‰

        System.out.println("n-- = " + (n--)); // 7ï¼ˆä½¿ã£ãŸå¾Œã§ -1ï¼‰
        System.out.println("n   = " + n);    // 6
        System.out.println("--n = " + (--n)); // 5ï¼ˆä½¿ã†å‰ã« -1ï¼‰
    }
}

