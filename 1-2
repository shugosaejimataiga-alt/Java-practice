public class ComparisonExample {
    public static void main(String[] args) {
        int a = 10;
        int b = 20;

        System.out.println("a == b â†’ " + (a == b)); // false
        System.out.println("a != b â†’ " + (a != b)); // true
        System.out.println("a > b  â†’ " + (a > b));  // false
        System.out.println("a < b  â†’ " + (a < b));  // true
        System.out.println("a >= b â†’ " + (a >= b)); // false
        System.out.println("a <= b â†’ " + (a <= b)); // true
    }
}


