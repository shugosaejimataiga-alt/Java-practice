public class OperatorExample {
    public static void main(String[] args) {
        // ç®—è¡“æ¼”ç®—å­
        int a = 10;
        int b = 3;
        System.out.println("a + b = " + (a + b)); // è¶³ã—ç®—
        System.out.println("a - b = " + (a - b)); // å¼•ãç®—
        System.out.println("a * b = " + (a * b)); // æ›ã‘ç®—
        System.out.println("a / b = " + (a / b)); // å‰²ã‚Šç®—ï¼ˆæ•´æ•°åŒå£«ãªã®ã§å°æ•°åˆ‡ã‚Šæ¨ã¦ï¼‰
        System.out.println("a % b = " + (a % b)); // ä½™ã‚Š

        // ä»£å…¥æ¼”ç®—å­
        int x = 5;
        x += 3; // x = x + 3 ã¨åŒã˜
        System.out.println("x += 3 â†’ " + x);
        x -= 2; // x = x - 2 ã¨åŒã˜
        System.out.println("x -= 2 â†’ " + x);

        // æ¯”è¼ƒæ¼”ç®—å­
        System.out.println("a == b â†’ " + (a == b)); // ç­‰ã—ã„ã‹
        System.out.println("a != b â†’ " + (a != b)); // ç­‰ã—ããªã„ã‹
        System.out.println("a > b  â†’ " + (a > b));  // å¤§ãã„ã‹
        System.out.println("a <= b â†’ " + (a <= b)); // ä»¥ä¸‹ã‹

        // è«–ç†æ¼”ç®—å­
        boolean p = true;
        boolean q = false;
        System.out.println("p && q â†’ " + (p && q)); // ANDï¼ˆä¸¡æ–¹trueãªã‚‰trueï¼‰
        System.out.println("p || q â†’ " + (p || q)); // ORï¼ˆã©ã¡ã‚‰ã‹trueãªã‚‰trueï¼‰
        System.out.println("!p â†’ " + (!p));         // NOTï¼ˆtrueã‚’falseã«ï¼‰

        // ã‚¤ãƒ³ã‚¯ãƒªãƒ¡ãƒ³ãƒˆãƒ»ãƒ‡ã‚¯ãƒªãƒ¡ãƒ³ãƒˆ
        int y = 7;
        System.out.println("y++ â†’ " + (y++)); // å¾Œç½®ï¼šä½¿ã£ãŸå¾Œã§ +1
        System.out.println("y â†’ " + y);
        System.out.println("++y â†’ " + (++y)); // å‰ç½®ï¼šä½¿ã†å‰ã« +1
        System.out.println("y-- â†’ " + (y--)); // å¾Œç½®ï¼šä½¿ã£ãŸå¾Œã§ -1
        System.out.println("y â†’ " + y);
    }
}


