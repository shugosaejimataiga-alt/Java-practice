public class LogicalExample {
    public static void main(String[] args) {
        int a = 5;
        int b = 10;

        System.out.println((a > 0) && (b > 0)); // true && true â†’ true
        System.out.println((a > 0) && (b < 0)); // true && false â†’ false

        System.out.println((a > 0) || (b < 0)); // true || false â†’ true
        System.out.println((a < 0) || (b < 0)); // false || false â†’ false

        System.out.println(!(a > 0));           // !(true) â†’ false
        System.out.println(!(a < 0));           // !(false) â†’ true
    }
}


