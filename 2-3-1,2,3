class Animal{
  public String type;
  private int age;

  public getAge(){
    return age;
  }
  public setAge(int age){
    this.age = age;
  }
}

public class Main {
  public static void main (String[] args){
    Animal animal1 = new Animal();

    animal1.type = "Tiger";
    System.out.println(animal1.type);

    animal1.setAge(20);

    System.out.println(animal1.getAge());
  }
}

