import java.util.ArrayList;

public class Main {
  public static void main (Stirng[] args){
    ArrauList<Integer> LikeNumbers = new ArrayList<>();

    LikeNumbers.add(1);
    LikeNumbers.add(2);
    LikeNumbers.add(3);
    LikeNumbers.add(4);
    LikeNumbers.add(5);
    
    for (int i =0; i < LikeNumbers.size(); i++){
      System.out.println(LikeNumbers.get(i));
