import java.util.ArrayList;

public class Main {
  public static void main (Stirng[] args){
    ArrayList<Integer> LikeIntegers = new ArrayList<>();

    LikeIntegers.add(1);
    LikeIntegers.add(2);
    LikeIntegers.add(3);
    LikeIntegers.add(4);
    LikeIntegers.add(5);
    LikeIntegers.add(6);
    LikeIntegers.add(7);
    LikeIntegers.add(8);
    LikeIntegers.add(9);
